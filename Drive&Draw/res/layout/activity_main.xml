<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<RelativeLayout 
    android:id="@+id/back_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

   <SeekBar
       android:id="@+id/seekBarDrive"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_alignParentLeft="true"
       android:layout_marginBottom="16dp"
       android:max="10" />

   <SeekBar
       android:id="@+id/seekBarTail"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_above="@+id/seekBarDrive"
       android:layout_alignParentLeft="true"
       android:layout_toLeftOf="@+id/textViewHeading"
       android:max="360" />

   <TextView
       android:id="@+id/textViewPositionX"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_alignParentLeft="true"
       android:text="X: "
       android:textAppearance="?android:attr/textAppearanceSmall" />

   <TextView
       android:id="@+id/textViewCollisionY"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBaseline="@+id/textViewCollisionX"
       android:layout_alignBottom="@+id/textViewCollisionX"
       android:layout_alignRight="@+id/seekBarDrive"
       android:layout_marginRight="42dp"
       android:text="CY: "
       android:textAppearance="?android:attr/textAppearanceSmall" />

   <TextView
       android:id="@+id/textViewPositionY"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBaseline="@+id/textViewPositionX"
       android:layout_alignBottom="@+id/textViewPositionX"
       android:layout_marginLeft="44dp"
       android:layout_toRightOf="@+id/textViewPositionX"
       android:text="Y: "
       android:textAppearance="?android:attr/textAppearanceSmall" />

   <TextView
       android:id="@+id/textViewCollisionX"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBaseline="@+id/textViewPositionY"
       android:layout_alignBottom="@+id/textViewPositionY"
       android:layout_marginRight="46dp"
       android:layout_toLeftOf="@+id/textViewCollisionY"
       android:text="CX: "
       android:textAppearance="?android:attr/textAppearanceSmall" />

   <TextView
       android:id="@+id/textViewHeading"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignRight="@+id/textViewCollisionY"
       android:layout_alignTop="@+id/seekBarTail"
       android:text="H: "
       android:textAppearance="?android:attr/textAppearanceSmall" />

   <TextView
       android:id="@+id/speedView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignRight="@+id/seekBarDrive"
       android:layout_alignTop="@+id/seekBarDrive"
       android:layout_marginRight="21dp"
       android:text=""
       android:textAppearance="?android:attr/textAppearanceSmall" />

   <ImageView
       android:id="@+id/imageView1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/seekBarTail"
       android:layout_alignParentLeft="true"
       android:layout_alignParentRight="true"
       android:layout_alignParentTop="true"
       android:src="@drawable/canvas_background" />

</RelativeLayout>

<orbotix.view.connection.SpheroConnectionView
    android:id="@+id/sphero_connection_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff" />

</FrameLayout>
